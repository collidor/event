{
  "compilerOptions": {
    "outDir": "/dist",
    "rootDir": "./src",
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "moduleResolution": "nodenext",
    "target": "es5",
    "module": "NodeNext",
    "lib": ["ESNext", "DOM"]
  },
  "exclude": ["/node_modules", "/dist"]
}
