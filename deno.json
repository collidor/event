{
    "name": "@collidor/event",
    "version": "3.1.1",
    "license": "MIT",
    "exports": {
        ".": "./src/main.ts"
    },
    "publish": {
        "include": [
            "./src/**/*",
            "README.md",
            "deno.json",
            "deno.lock",
            "LICENSE"
        ],
        "exclude": [
            "dist"
        ]
    },
    "tasks": {
        "dev": "deno run --watch ./src/main.ts"
    },
    "imports": {
        "@std/assert": "jsr:@std/assert@1",
        "@std/testing": "jsr:@std/testing@1",
        "@collidor/injector": "jsr:@collidor/injector@^2.0.0"
    },
    "lint": {
        "rules": {
            "exclude": [
                "no-explicit-any"
            ]
        }
    },
    "compilerOptions": {
        "lib": [
            "ESNext",
            "deno.window"
        ],
        "noUncheckedIndexedAccess": true,
        "strict": true
    },
    "unstable": [
        "sloppy-imports"
    ]
}