{
    "name": "@collidor/event",
    "version": "1.2.0",
    "description": "A small library to create, register and listen to events.",
    "repository": {
        "type": "git",
        "url": "https://github.com/collidor/event"
    },
    "type": "module",
    "exports": {
        ".": {
            "import": "./dist/main.js",
            "require": "./dist/main.cjs",
            "types": "./dist/main.d.ts"
        },
        "./broadcastPublishingChannel": {
            "import": "./dist/channels/broadcastPublishingChannel.js",
            "require": "./dist/channels/broadcastPublishingChannel.cjs",
            "types": "./dist/channels/broadcastPublishingChannel.d.ts"
        }
    },
    "scripts": {
        "test": "deno test",
        "build": "tsup src/main.ts src/channels/broadcastPublishingChannel.ts --sourcemap --dts --format esm,cjs"
    },
    "keywords": [
        "event",
        "event bus",
        "event handler",
        "event emitter",
        "event listener",
        "event publisher"
    ],
    "author": "Alykam Burdzaki <alykam@gmail.com> (https://alykam.com)",
    "license": "MIT",
    "devDependencies": {
        "tsup": "^8.3.6",
        "typescript": "^5.7.3"
    }
}